{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000"
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "movies-route": {
        "ClusterId": "movie-cluster",
        "Match": {
          "Path": "/api/movies/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-service": {
            "Address": "http://localhost:5001/"
          }
        }
      },
      "movie-cluster": {
        "Destinations": {
          "movie-service": {
            "Address": "http://localhost:5002/"
          }
        }
      }
    }
  }
}
