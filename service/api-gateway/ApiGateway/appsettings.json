{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/auth"
          },
          {
            "PathPrefix": "/api/auth"
          }
        ]
      },
      "movie-route": {
        "ClusterId": "movie-cluster",
        "Match": {
          "Path": "/api/movies/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/movies"
          },
          {
            "PathPrefix": "/api/movies"
          }
        ]
      },
      "user-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/userprofiles/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/userprofiles"
          },
          {
            "PathPrefix": "/api/userprofiles"
          }
        ]
      },
      "library-route": {
        "ClusterId": "library-cluster",
        "Match": {
          "Path": "/api/libraries/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/libraries"
          },
          {
            "PathPrefix": "/api/libraries"
          }
        ]
      },
      "file-upload-route": {
        "ClusterId": "file-cluster",
        "Match": {
          "Path": "/api/files/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/files"
          },
          {
            "PathPrefix": "/api/files"
          }
        ]
      },
      "file-serve-route": {
        "ClusterId": "file-cluster",
        "Match": {
          "Path": "/uploads/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-service": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "movie-cluster": {
        "Destinations": {
          "movie-service": {
            "Address": "http://localhost:5002"
          }
        }
      },
      "user-cluster": {
        "Destinations": {
          "user-service": {
            "Address": "http://localhost:5003"
          }
        }
      },
      "library-cluster": {
        "Destinations": {
          "library-service": {
            "Address": "http://localhost:5004"
          }
        }
      },
      "file-cluster": {
        "Destinations": {
          "file-service": {
            "Address": "http://localhost:5005"
          }
        }
      }
    }
  }
}