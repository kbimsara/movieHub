# User Service Environment Variables Template
# Copy this file to .env and update with your configuration
# DO NOT commit .env with real secrets to source control

# Service Port Configuration
ASPNETCORE_URLS=http://+:5002;https://+:5445
ASPNETCORE_HTTP_PORT=5002
ASPNETCORE_HTTPS_PORT=5445

# Database Connection
ConnectionStrings__DefaultConnection=Host=localhost;Port=5434;Database=userdb;Username=postgres;Password=YOUR_PASSWORD_HERE

# Individual DB components (for Docker/Kubernetes)
DB_HOST=localhost
DB_PORT=5434
DB_NAME=userdb
DB_USER=postgres
DB_PASSWORD=YOUR_PASSWORD_HERE

# JWT Configuration
# CRITICAL: Must match Auth Service secret for token validation
JwtSettings__Secret=MUST_MATCH_AUTH_SERVICE_SECRET
JwtSettings__Issuer=MovieHub.AuthService
JwtSettings__Audience=MovieHub.Client
JwtSettings__ExpiryMinutes=60

# Downstream Service URLs
AuthService__BaseUrl=http://auth-service:5001

# Logging Configuration
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft__AspNetCore=Warning
Logging__LogLevel__Microsoft__EntityFrameworkCore=Information

# CORS Settings
AllowedHosts=*

# Environment
ASPNETCORE_ENVIRONMENT=Development
