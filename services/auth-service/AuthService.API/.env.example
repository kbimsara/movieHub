# Auth Service Environment Variables Template
# Copy this file to .env and update with your configuration
# DO NOT commit .env with real secrets to source control

# Service Port Configuration
ASPNETCORE_URLS=http://+:5001;https://+:5444
ASPNETCORE_HTTP_PORT=5001
ASPNETCORE_HTTPS_PORT=5444

# Database Connection
ConnectionStrings__DefaultConnection=Host=localhost;Port=5432;Database=authdb;Username=postgres;Password=YOUR_PASSWORD_HERE

# Individual DB components (for Docker/Kubernetes)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=authdb
DB_USER=postgres
DB_PASSWORD=YOUR_PASSWORD_HERE

# JWT Configuration
# CRITICAL: Generate a secure secret for production using: openssl rand -base64 32
Jwt__Secret=CHANGE_ME_GENERATE_SECURE_SECRET_MIN_32_CHARS
Jwt__Issuer=MovieHub.AuthService
Jwt__Audience=MovieHub.Client
Jwt__ExpiryMinutes=60
Jwt__RefreshTokenExpiryDays=7
Jwt__ClockSkewMinutes=5

# Logging Configuration
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft__AspNetCore=Warning
Logging__LogLevel__Microsoft__EntityFrameworkCore=Information

# CORS Settings
AllowedHosts=*

# Environment
ASPNETCORE_ENVIRONMENT=Development
