# Catalog Service Environment Variables Template
# Copy this file to .env and update with your configuration
# DO NOT commit .env with real secrets to source control

# Service Port Configuration
ASPNETCORE_URLS=http://+:5003;https://+:5446
ASPNETCORE_HTTP_PORT=5003
ASPNETCORE_HTTPS_PORT=5446

# Database Connection
ConnectionStrings__DefaultConnection=Host=localhost;Port=5435;Database=catalogdb;Username=postgres;Password=YOUR_PASSWORD_HERE

# Individual DB components (for Docker/Kubernetes)
DB_HOST=localhost
DB_PORT=5435
DB_NAME=catalogdb
DB_USER=postgres
DB_PASSWORD=YOUR_PASSWORD_HERE

# JWT Configuration
# CRITICAL: Must match Auth Service secret for token validation
Jwt__Secret=MUST_MATCH_AUTH_SERVICE_SECRET
Jwt__Issuer=MovieHub.AuthService
Jwt__Audience=MovieHub.Client
Jwt__ExpiryMinutes=60

# Downstream Service URLs
AuthService__BaseUrl=http://auth-service:5001
SearchService__BaseUrl=http://search-service:5004

# Logging Configuration
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft__AspNetCore=Warning
Logging__LogLevel__Microsoft__EntityFrameworkCore=Information

# CORS Settings
AllowedHosts=*

# Environment
ASPNETCORE_ENVIRONMENT=Development
