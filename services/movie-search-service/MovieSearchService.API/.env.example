# Movie Search Service Environment Variables Template
# Copy this file to .env and update with your configuration
# DO NOT commit .env with real secrets to source control

# Service Port Configuration
ASPNETCORE_URLS=http://+:5004;https://+:5447
ASPNETCORE_HTTP_PORT=5004
ASPNETCORE_HTTPS_PORT=5447

# Elasticsearch Configuration
Elasticsearch__Url=http://localhost:9200
Elasticsearch__IndexName=movies
Elasticsearch__Username=
Elasticsearch__Password=

# Individual Elasticsearch components (for Docker/Kubernetes)
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_SCHEME=http
ELASTICSEARCH_INDEX=movies
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# JWT Configuration (if API requires authentication)
Jwt__Secret=MUST_MATCH_AUTH_SERVICE_SECRET
Jwt__Issuer=MovieHub.AuthService
Jwt__Audience=MovieHub.Client

# Downstream Service URLs
CatalogService__BaseUrl=http://catalog-service:5003

# Search Settings
Search__MaxResults=100
Search__DefaultPageSize=20
Search__EnableFuzzySearch=true

# Logging Configuration
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft__AspNetCore=Warning
Logging__LogLevel__Elasticsearch=Information

# CORS Settings
AllowedHosts=*

# Environment
ASPNETCORE_ENVIRONMENT=Development
