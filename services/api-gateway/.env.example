# API Gateway Environment Variables Template
# Copy this file to .env and update with your configuration
# DO NOT commit .env with real values to source control

# Service Port Configuration
ASPNETCORE_URLS=http://+:5000;https://+:5443
ASPNETCORE_HTTP_PORT=5000
ASPNETCORE_HTTPS_PORT=5443

# Downstream Service URLs (Docker service names for container networking)
ReverseProxy__Clusters__auth-cluster__Destinations__auth-service__Address=http://auth-service:5001
ReverseProxy__Clusters__users-cluster__Destinations__user-service__Address=http://user-service:5002
ReverseProxy__Clusters__catalog-cluster__Destinations__catalog-service__Address=http://catalog-service:5003
ReverseProxy__Clusters__search-cluster__Destinations__search-service__Address=http://search-service:5004

# Logging Configuration
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft__AspNetCore=Warning
Logging__LogLevel__Yarp=Information

# CORS Settings
AllowedHosts=*

# Environment
ASPNETCORE_ENVIRONMENT=Development
